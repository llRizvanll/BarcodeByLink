{
    "manifest_version": 2,
    "name": "Instant Barcode By Link",
    "description": "Create instant barcode images using from any link or text or description on a single click.",
    "version": "1.0",
    "icons": {
      "16": "icon16.png",
      "48": "icon64.png",
      "128": "icon128.png"
    },
    "browser_action": {
      "default_popup": "index.html",
      "default_width": 600,
      "default_height": 400
    },
    "permissions": ["activeTab"]
  }